generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLES {
  STUDENT
  ADMIN
  TEACHER
}

enum TEACHER_APPLICATION_STATUS {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                  Int                  @id @default(autoincrement())
  email               String               @unique
  fullName            String
  password            String
  role                USER_ROLES           @default(STUDENT) //admin / student / teacher
  wantsNotifications  Boolean              @default(false)
  avatarUrl           String?
  refreshToken        String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  lessonsToAttend     Lesson[]
  teacherApplications TeacherApplication[]
}

model Lesson {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  startTime   DateTime
  endTime     DateTime
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  attendees   User[]
  location    Office   @relation(fields: [locationId], references: [id])
  locationId  Int
}

model Office {
  id       Int      @id @default(autoincrement())
  name     String
  address  String
  imageUrl String?
  lessons  Lesson[]
}

model TeacherApplication {
  id               Int                        @id @default(autoincrement())
  user             User                       @relation(fields: [userId], references: [id])
  userId           Int
  languageLevel    String
  motivationLetter String
  status           TEACHER_APPLICATION_STATUS @default(PENDING) // PENDING, APPROVED, REJECTED
  createdAt        DateTime                   @default(now())
  updatedAt        DateTime                   @updatedAt
}
